# Turns off anoying error when ssh to linux servers
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

# Path to Homebrew
export PATH=/usr/local/bin:$PATH

# Path to VSCODE
export PATH="$PATH:/Applications/Visual Studio Code.app/Contents/Resources/app/bin"

# Local path
export PATH=${HOME}/local/bin:$PATH
export LD_LIBRARY_PATH=${HOME}/local/lib:$LD_LIBRARY_PATH

# npm / node.js stuff
export PATH=${HOME}/.npm-global/bin:$PATH

# pyenv
export PATH="$HOME/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# Favor conda over pyenv
# added by Miniconda3 4.5.12 installer 
# >>> conda init >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$(CONDA_REPORT_ERRORS=false '${HOME}/miniconda3/bin/conda' shell.bash hook 2> /dev/null)"
if [ $? -eq 0 ]; then
    \eval "$__conda_setup"
else
    if [ -f "${HOME}/miniconda3/etc/profile.d/conda.sh" ]; then
        . "${HOME}/miniconda3/etc/profile.d/conda.sh"
        CONDA_CHANGEPS1=false conda activate base
    else
        \export PATH="${HOME}/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda init <<<

export GOPATH=${HOME}/go

# PDF-tools
export PATH=/usr/local/opt/qt/bin:/usr/local/opt/nss/bin:$PATH
export PKG_CONFIG_PATH="/usr/local/opt/qt/lib/pkgconfig:/usr/local/opt/nss/lib/pkgconfig:$PKG_CONFIG_PATH"
#export LDFLAGS="-L/usr/local/opt/nss/lib -L/usr/local/opt/qt/lib $LDFLAGS"
#export CPPFLAGS="-I/usr/local/opt/nss/include" -I/usr/local/opt/qt/include"

# C - include path
export CPATH=/usr/local/include:$CPATH